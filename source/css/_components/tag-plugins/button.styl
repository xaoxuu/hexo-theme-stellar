a.tag-plugin.button
  background: var(--theme)
  color: var(--alpha100)
  display: inline-flex
  align-items: center
  justify-content: center
  padding: 0 4px
  trans1 background
  margin-top: 8px
  margin-bottom: 8px
  svg,img
    height: 24px
    width: auto
    margin: 0 -0.5em 0 1em
    flex-shrink: 0
  span 
    text-indent: 0
    line-height: 24px
    margin: 8px 1em
  

a.tag-plugin.button[size='xs']
  margin: 0
  border-radius: 2px
  svg,img
    margin: 0 2px 0 0
    height: 1em
  span
    margin: 0

a.tag-plugin.button:hover
  --theme: $color-hover

.tag-plugin.grid a.tag-plugin.button
  width: 100%
  box-sizing: border-box
